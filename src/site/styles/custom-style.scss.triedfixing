/*** Search-related styling ***/
/* Light theme */
.theme-light {
  .search-loading-status {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin: 5px 0;
    text-align: center;
  }

  .search-status {
    margin: 0 0 10px 0;
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .searchresult strong {
    background-color: #f9f5d7;
    font-weight: bold;
    color: var(--text-accent);
  }
}

/* Dark theme */
.theme-dark {
  .search-loading-status {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin: 5px 0;
    text-align: center;
  }

  .search-status {
    margin: 0 0 10px 0;
    font-size: 0.8rem;
    color: var(--text-muted);
  }

  .searchresult strong {
    background-color: rgba(251, 241, 199, 0.15);
    font-weight: bold;
    color: var(--text-accent);
  }
}

/*** Fix right sidebar visibility and positioning ***/
@media (min-width: 1200px) {
    /* Left filetree is 250px wide */
    /* Right sidebar is now 370px wide (increased from 350px) */
    .content {
        max-width: 700px;
        margin-left: calc(250px + 40px); /* filetree width + some padding */
        margin-right: calc(370px + 40px); /* Adjusted for new sidebar width */
        position: relative;
    }

    .sidebar {  /* This is the right sidebar */
        position: fixed;
        top: 75px;
        right: 17px;
        transform: none;
        max-width: 370px; /* Increased from 350px */
        padding: 0;  /* Remove padding from sidebar itself */
    }

    .toc, #link-graph {
        border-radius: 10px;
        margin-left: 5px; /* Pull content slightly away from left edge */
        width: calc(100% - 5px); /* Ensure content stays within sidebar */
    }

    .toc, .backlinks {
        width: 100%;  /* Use full width */
        margin: 0;  /* Remove margins */
        padding: 15px;  /* Internal padding */
        box-sizing: border-box;  /* Include padding in width */
        background-color: var(--background-primary);
        border-radius: 10px;
    }

    .sidebar-container {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        gap: 20px;
        width: 100%;
        height: 87vh;  /* Fix height to enable proper scrolling */
        padding: 0 20px 0 0;  /* Add padding only on right side for scrollbar */
        margin-left: 20px;  /* Move content left instead of using left padding */
        overflow-y: auto;  /* Enable scrolling */
    }

    .toc {
        display: block !important;
    }
}

/* Ensure proper stacking */
.sidebar {
    z-index: 2;
    background-color: var(--background-secondary);
}

.content {
    position: relative;
    z-index: 1;
}